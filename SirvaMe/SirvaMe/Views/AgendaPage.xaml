<?xml version="1.0" encoding="utf-8" ?>
<!--Schedule (Page)-->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SirvaMe.Views.AgendaPage"
             Title="Calendário"
             BackgroundColor="White">

  <RelativeLayout x:Name="RelativeLayout" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

      <StackLayout x:Name="StackLayout" Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand">

        <Label Text="Selecione uma data para filtrar!" FontSize="15" FontAttributes="Bold" TextColor="{StaticResource FontColor}" VerticalTextAlignment="Start" HorizontalTextAlignment="Center" />

      </StackLayout>

  </RelativeLayout>

</ContentPage>